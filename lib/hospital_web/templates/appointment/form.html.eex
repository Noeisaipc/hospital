<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :fecha %>
  <%= date_select f, :fecha %>
  <%= error_tag f, :fecha %>

    <%= label f, :nombre %>
    <%= text_input f, :nombre %>
    <%= error_tag f, :nombre %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
